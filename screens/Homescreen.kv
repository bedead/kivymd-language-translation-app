#:import rgba kivy.utils.get_color_from_hex
#:import toast kivymd.toast.toast
<Homescreen>
    name: "Home"
    MDFloatLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.primary_color
        size_hint: 1,1
        MDLabel:
            text: "Langgo"
            font_style: 'H4'
            pos_hint: {'center_x': 0.58,'center_y': 0.96}
        MDBoxLayout:
            orientation: 'vertical'
            size_hint:1,0.75
            pos_hint: {'top': 0.9,'center_x': 0.5}
            padding: '10dp'
            MDCard:
                pos_hint: {'top': 1,'center_x': 0.5}
                orientation: "vertical"
                size_hint: 0.9, 1
                elevation: 12
                radius: 12
                MDToolbar:
                    title: "Translate"
                    elevation: 10
                MDFloatLayout:
                    orientation: 'vertical'
                    size_hint: 1,1
                    pos_hint: {'top': 1}
                    padding: 4
                    spacing: 4
                    MDGridLayout:
                        cols: 3
                        adaptive_height: True
                        size: 1, 0.1
                        spacing: 2
                        padding: '10dp'
                        adaptive_width: True
                        pos_hint: {'center_x': 0.5,'center_y': 0.9}
                    
                        MDFillRoundFlatButton:
                            id: selectto
                            text: "Change to language"
                            on_release:
                                app.show_to_option()
                    
                    MDTextField:
                        id: from_text
                        pos_hint: {'center_x': 0.5,'center_y': 0.7}
                        hint_text: 'From text: '
                        multiline: True
                    MDTextField:
                        id: to_text
                        pos_hint: {'center_x': 0.5,'center_y': 0.45}
                        hint_text: 'To text: '
                        multiline: True
                    MDFillRoundFlatButton:
                        text: "Translate Text"
                        pos_hint: {'center_x': 0.5,'center_y': 0.3}
                        on_release:
                            root.translate_text(from_text.text)

